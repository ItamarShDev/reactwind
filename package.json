{
  "name": "reactwind",
  "version": "0.1.0",
  "packageManager": "bun@1.3.2",
  "description": "JSX runtime wrapper that adds a classNames prop to React elements.",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js",
      "require": "./dist/jsx-runtime.cjs"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.js",
      "require": "./dist/jsx-dev-runtime.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/jsx-runtime.ts src/jsx-dev-runtime.ts --format esm,cjs --dts",
    "test": "vitest run",
    "test:storybook": "vitest run --project storybook",

    "lint": "oxlint",
    "format": "oxfmt --write src",
    "check": "oxfmt --check src",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "10.2.1",
    "@storybook/addon-vitest": "^10.2.1",
    "@storybook/react-vite": "10.2.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "happy-dom": "^20.4.0",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "storybook": "10.2.1",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
